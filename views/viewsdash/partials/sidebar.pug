// Tip 1: you can change the color of the sidebar using: data-color="blue | black | azure | green | orange | red | purple"
// Tip 2: you can also add an image using data-image tag
.sidebar(data-color="black")
  .sidebar-wrapper
    .logo
      a(href="/dashboard/home")
        include ../../../public/svg/logo-precision.svg
    ul.nav
      li(class=(pageName == 'dashboard') ? 'active' : '')
        a(href="/dashboard/home")
          i.pe-7s-graph
          | Dashboard
      li(class=(pageName == 'users') ? 'active' : '')
        a(href="/dashboard/users")
          i.pe-7s-users
          | Usuários
      li(class=(pageName == 'galery') ? 'active' : '')
        a(href="/dashboard/galleries")
          i.pe-7s-photo
          | Galeria
      li(class=(pageName == 'pages') ? 'active' : '')
        a(href="/dashboard/pages")
          i.pe-7s-browser
          | Páginas Institucionais
      li(class=(pageName == 'events') ? 'active' : '')
        a(href="/dashboard/events")
          i.pe-7s-date
          | Eventos
      li
        a(href="/", target="_black")
          i.pe-7s-home
          | Visitar o site
