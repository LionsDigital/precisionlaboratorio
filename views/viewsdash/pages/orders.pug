extends ../layout

block content
  .content
      .container-fluid
        .row
          .col-md-12
            .card
              .header
                h4.title Meus Pedidos
                p.category Lista de pedidos realizados
                if(user._role.value > 9)
                  a(href='/order').btn.btn-default.pull-right Criar Pedido
              .content.table-responsive.table-full-width
                table.table.table-hover.table-striped
                  thead
                    th Pagina
                    th Descrição
                    th.text-center Editar
                  tbody
                    tr
                      td Home
                      td Precision Laboratório
                      td.text-center
                        a(href="/dashboard/user/1").btn.btn-info.btn-fill Editar Página
