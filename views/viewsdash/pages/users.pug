extends ../layout

block content
  .content
      .container-fluid
        .row
          .col-md-12
            .card
              .header
                h4.title Usuários
                p.category Listagem de usuários cadastrados
              .content.table-responsive.table-full-width
                table.table.table-hover.table-striped
                  thead
                    th ID
                    th Nome
                    th Tipo
                    th Email
                    th CPF/CNPJ
                    th Status
                    th.text-center Editar
                  tbody
                    each user, index in users
                      tr
                        td=index
                        td=user.profile.name
                        td=user.role
                        td=user.email
                        if user.cpf != ''
                          td=user.cpf
                        else
                          td=user.cnpj
                        td=user.profile.cpf
                        td
                          if user.status == "ativo"
                            .legend
                              .fa.fa-circle.text-info
                              | Ativo
                          else if user.status == "desativado"
                            .fa.fa-circle.text-danger
                            | Desativado
                          else
                            .fa.fa-circle.text-warning
                            | Pendente
                        td.text-center
                          a(href=`/dashboard/user/${user._id}`).btn.btn-info.btn-fill Editar Usuário
