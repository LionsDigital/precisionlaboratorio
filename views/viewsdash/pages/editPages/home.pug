extends ../../layout

block content
  .content
    .container-fluid
      .row
        .col-md-12
          .card
            .header
              h4.title Página Inicial
            .content
              form(action='/page/home', method='POST', enctype='multipart/form-data')
                input(type='hidden', name='_csrf', value=_csrf)
                .row
                  .col-sm-12
                    if !signup
                      include ../../../partials/flash
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='titleMesage') Título Mensagem
                      input.form-control(type='text', name='titleMesage', id='titleMesage', value=pageInfo.customFields.titleMesage, required)
                  .col-sm-6
                    .form-group
                      label.control-label(for='mesage') Texto
                      textarea.form-control(rows='5', type='text', name='mesage', id='mesage' required)=pageInfo.customFields.mesage
                
                .row
                  .col-sm-12
                    h5 Video Slide Youtube 
                      br
                      small Adicione apenas o código dos vídeos
                    hr
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='slide1') Youtube 1
                      input.form-control(type='text', name='slide1', id='slide1', value=pageInfo.customFields.slide1)
                  .col-sm-6
                    .form-group
                      label.control-label(for='slide2') Youtube 2
                      input.form-control(type='text', name='slide2', id='slide2', value=pageInfo.customFields.slide2)
                
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='slide3') Youtube 3 
                      input.form-control(type='text', name='slide3', id='slide3', value=pageInfo.customFields.slide3)
                  .col-sm-6
                    .form-group
                      label.control-label(for='slide4') Youtube 4
                      input.form-control(type='text', name='slide4', id='slide4', value=pageInfo.customFields.slide4)
                              
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='slide5') Youtube 5
                      input.form-control(type='text', name='slide5', id='slide5', value=pageInfo.customFields.slide5)
              
                .row
                  .col-sm-12
                    h5 Slide Imagens 
                      br
                      small Selecione imagens com (2000px por 1100px)
                    hr
                .row
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem1)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem1.url_image)
                    .form-group
                      label.control-label(for='slideImagem1') Imagem 1
                      input.form-control(type='file', name='slideImagem1', id='slideImagem1')
                      input(type='checkbox', name='slideImagemRemover1')
                      label Remover Imagem
                        
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem2)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem2.url_image)
                    .form-group
                      label.control-label(for='slideImagem2') Imagem 2
                      input.form-control(type='file', name='slideImagem2', id='slideImagem2')
                      input(type='checkbox', name='slideImagemRemover2')
                      label Remover Imagem
                
                .row
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem3)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem3.url_image)
                    .form-group
                      label.control-label(for='slideImagem3') Imagem 3 
                      input.form-control(type='file', name='slideImagem3', id='slideImagem3')
                      input(type='checkbox', name='slideImagemRemover3')
                      label Remover Imagem
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem4)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem4.url_image)
                    .form-group
                      label.control-label(for='slideImagem4') Imagem 4
                      input.form-control(type='file', name='slideImagem4', id='slideImagem4') 
                      input(type='checkbox', name='slideImagemRemover3')
                      label Remover Imagem         
                .row
                  .col-sm-12
                    h5 Configurações de SEO
                    hr
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='seoTitle') Título
                      input.form-control(type='text', name='seoTitle', id='seoTitle', value=pageInfo.seo.title)
                    .form-group
                      label.control-label(for='seoImage') Imagem de destaque
                      input.form-control(type='file', name='seoImage', id='seoImage', placeholder='Selecione o arquivo')
                  .col-sm-6
                    .form-group
                      label.control-label(for='seoDescription') Descrição Curta
                      textarea.form-control(rows='5', type='text', name='seoDescription')=pageInfo.seo.descripton


                .row
                  .col-sm-12
                    .form-group
                        button.btn.btn-info.btn-fill.pull-right(type='submit')
                          i.fa.fa-pencil
                          | Salvar

                if (pageInfo.seo)
                  .row
                    .col-sm-4
                      .card
                        .header
                          h4.title Imagem de destaque
                        .content
                          .image
                            a(href=pageInfo.seo.urlImage, target='_black')
                              img(src=pageInfo.seo.urlImage)
