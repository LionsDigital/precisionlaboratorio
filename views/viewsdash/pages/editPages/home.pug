extends ../../layout

block content
  .content
    .container-fluid
      .row
        .col-md-12
          .card
            .header
              h4.title Página Inicial
            .content
              form(action='page/home', method='POST', enctype="multipart/form-data")
                input(type='hidden', name='_csrf', value=_csrf)
                input(type='hidden', name='page', value='home')
                .row
                  .col-sm-12
                    if !signup
                      include ../../../partials/flash
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='title') Título Mensagem
                      input.form-control(type='text', name='title', id='title', required)
                  .col-sm-6
                    .form-group
                      label.control-label(for='text') Texto
                      textarea.form-control(type='text', name='text', required)
                .row
                  .col-sm-12
                    h5 Video/Imagens Slide
                    hr
                .row
                  .col-sm-4
                    .card
                      .header
                        h4.title Imagem de destaque
                      .content
                        .image
                          a(href, target='_black')
                            img(src)
                      .footer
                        hr
                        .stats
                          .col-sm-6
                            a(href).btn.btn-info
                              i.fa.fa-edit
                          .col-sm-6
                            a(href).btn.btn-danger
                              i.fa.fa-trash
                .row
                  .col-sm-12
                    h5 Configurações de SEO
                    hr
                .row
                  .col-sm-4
                    .form-group
                      label.control-label(for='seoTitle') Título
                      input.form-control(type='text', name='seoTitle', id='seoTitle', required)
                  .col-sm-4
                    .form-group
                      label.control-label(for='seoDescription') Descrição Curta
                      input.form-control(type='text', name='seoDescription', required)
                  .col-sm-4
                    .form-group
                      label.control-label(for='seoImage') Imagem de destaque
                      input.form-control(type='file', name='seoImage', id='seoImage', value='', placeholder='Selecione o arquivo')

                .row
                  .col-sm-12
                    .form-group
                        button.btn.btn-info.btn-fill.pull-right(type='submit')
                          i.fa.fa-pencil
                          | Salvar

                if (pageInfo.seo && pageInfo.seo.urlImage)
                  .row
                    .col-sm-4
                      .card
                        .header
                          h4.title Imagem de destaque
                        .content
                          .image
                            a(href=pageInfo.seo.urlImage, target='_black')
                              img(src=ageInfo.seo.urlImage)
