extends ../../layout

block content
  .content
    .container-fluid
      .row
        .col-md-12
          .card
            .header
              h4.title Página Inicial
            .content
              form(action='/page/home', method='POST', enctype='multipart/form-data')
                input(type='hidden', name='_csrf', value=_csrf)
                .row
                  .col-sm-12
                    if !signup
                      include ../../../partials/flash
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='titleMesage') Título Mensagem
                      input.form-control(type='text', name='titleMesage', id='titleMesage', value=pageInfo.customFields.titleMesage, required)
                  .col-sm-6
                    .form-group
                      label.control-label(for='mesage') Texto
                      textarea.form-control(rows='5', type='text', name='mesage', id='mesage' required)=pageInfo.customFields.mesage
                
                .row
                  .col-sm-12
                    h5 Slide Imagens 
                      br
                      small Selecione imagens com (2000px por 1100px)
                    hr
                .row
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem1)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem1.url_image)
                    .form-group
                      label.control-label(for='slideImagem1') Imagem 1
                      input.form-control(type='file', name='slideImagem1', id='slideImagem1', accept="image/png, image/jpeg")
                      input(type='checkbox', name='slideImagemRemover1')
                      label Remover Imagem
                        
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem2)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem2.url_image)
                    .form-group
                      label.control-label(for='slideImagem2') Imagem 2
                      input.form-control(type='file', name='slideImagem2', id='slideImagem2', accept="image/png, image/jpeg")
                      input(type='checkbox', name='slideImagemRemover2')
                      label Remover Imagem
                
                .row
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem3)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem3.url_image)
                    .form-group
                      label.control-label(for='slideImagem3') Imagem 3 
                      input.form-control(type='file', name='slideImagem3', id='slideImagem3', accept="image/png, image/jpeg")
                      input(type='checkbox', name='slideImagemRemover3')
                      label Remover Imagem
                  .col-sm-6
                    if (pageInfo.customFields.imagens && pageInfo.customFields.imagens.slideImagem4)
                      img.img-responsive(src=pageInfo.customFields.imagens.slideImagem4.url_image)
                    .form-group
                      label.control-label(for='slideImagem4') Imagem 4
                      input.form-control(type='file', name='slideImagem4', id='slideImagem4', accept="image/png, image/jpeg") 
                      input(type='checkbox', name='slideImagemRemover4')
                      label Remover Imagem         
                .row
                  .col-sm-12
                    h5 Configurações de SEO
                    hr
                .row
                  .col-sm-6
                    .form-group
                      label.control-label(for='seoTitle') Título
                      input.form-control(type='text', name='seoTitle', id='seoTitle', value=pageInfo.seo.title)
                    .form-group
                      label.control-label(for='seoImage') Imagem de destaque
                      input.form-control(type='file', name='seoImage', id='seoImage', placeholder='Selecione o arquivo', accept="image/png, image/jpeg")
                  .col-sm-6
                    .form-group
                      label.control-label(for='seoDescription') Descrição Curta
                      textarea.form-control(rows='5', type='text', name='seoDescription')=pageInfo.seo.descripton


                .row
                  .col-sm-12
                    .form-group
                        button.btn.btn-info.btn-fill.pull-right(type='submit')
                          i.fa.fa-pencil
                          | Salvar

                if (pageInfo.seo)
                  .row
                    .col-sm-4
                      .card
                        .header
                          h4.title Imagem de destaque
                        .content
                          .image
                            a(href=pageInfo.seo.urlImage, target='_black')
                              img(src=pageInfo.seo.urlImage)
          .card
            .header
              h4.title Página Inicial
            .content
              form(action='/page/videos/home', method='POST', enctype='multipart/form-data')
                input(type='hidden', name='_csrf', value=_csrf)
                .row
                  .col-sm-12
                    h5 Videos Slide
                      br
                      small Upload de videos (Formato mp4 / Tamanho máximo de 2Mb)
                    hr
                .row
                  .col-sm-6
                    if (pageInfo.customFields.videosSlide && pageInfo.customFields.videosSlide.slideVideo1)
                      video(controls).img-responsive
                        source(src=pageInfo.customFields.videosSlide.slideVideo1.url_video type='video/mp4')
                        
                    .form-group
                      label.control-label(for='slideVideo1') Video Slide 1
                      input.form-control(type='file', name='slideVideo1', id='slideVideo1', accept="video/mp4")
                      input(type='checkbox', name='slideVideoRemover1')
                      label Remover Vídeo
                  .col-sm-6
                    if (pageInfo.customFields.videosSlide && pageInfo.customFields.videosSlide.slideVideo2)
                      video(controls).img-responsive
                        source(src=pageInfo.customFields.videosSlide.slideVideo2.url_video type='video/mp4')
                    .form-group
                      label.control-label(for='slideVideo2') Video Slide 2
                      input.form-control(type='file', name='slideVideo2', id='slideVideo2', accept="video/mp4")
                      input(type='checkbox', name='slideVideoRemover2')
                      label Remover Vídeo
                
                .row
                  .col-sm-6
                    if (pageInfo.customFields.videosSlide && pageInfo.customFields.videosSlide.slideVideo3)
                      video(controls).img-responsive
                        source(src=pageInfo.customFields.videosSlide.slideVideo3.url_video type='video/mp4')
                    .form-group
                      label.control-label(for='slideVideo3') Video Slide 3
                      input.form-control(type='file', name='slideVideo3', id='slideVideo3', accept="video/mp4")
                      input(type='checkbox', name='slideVideoRemover3')
                      label Remover Vídeo
                  .col-sm-6
                    if (pageInfo.customFields.videosSlide && pageInfo.customFields.videosSlide.slideVideo4)
                      video(controls).img-responsive
                        source(src=pageInfo.customFields.videosSlide.slideVideo4.url_video type='video/mp4')
                    .form-group
                      label.control-label(for='slideVideo4') Video Slide 4
                      input.form-control(type='file', name='slideVideo4', id='slideVideo4', accept="video/mp4")
                      input(type='checkbox', name='slideVideoRemover3')
                      label Remover Vídeo
                
                .row
                  .col-sm-12
                    .form-group
                        button.btn.btn-info.btn-fill.pull-right(type='submit')
                          i.fa.fa-pencil
                          | Salvar
